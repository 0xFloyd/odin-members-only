<!DOCTYPE html>
<html lang="en">

<%- include('header') -%>

<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-xs-12">
                <% if (currentUser) {%>
                    <h1>Welcome <%= currentUser.username %></h1>
                    <% if (currentUser.member) {%>
                        <p>You are currently a member. Click <a href="/message">here</a> to add a new message.</p>
                        <% if (message_list) {%>
                            <% if (currentUser.admin) {%>
                                <% message_list.forEach(function(message) { %>
                                    <p class="messageContainer"><%= message.message %>. - posted on <%= message.date_formatted %> by <%= message.user.username %><form class="messageDeleteForm" action="" method="POST"><input class="messageDeleteInput" type="hidden" name="messageId" value="<%= message.id %>"/><button class="messageDeleteButton">X</button></form></p>
                                <% }); %>
                            <% } else {%>
                                <% message_list.forEach(function(message) { %>
                                    <p><%= message.message %>. - posted on <%= message.date_formatted %> by
                                        <%= message.user.username %>
                                    </p>
                                <% }); %>
                            <%}%>
                        <% } else {%>
                            <p>No messages found</p>
                        <%}%>
                    <% } else {%>
                        <p>Are you a member? <a href="/members">Enter here</a></p>
                        <% if (message_list) {%>
                            <h3>Become a member to see who posts messages!</h3>
                            <% message_list.forEach(function(message) { %>
                                <p><%= message.message %>. - posted on <%= message.date_formatted %></p>
                            <% }); %>
                        <% } else {%>
                            <p>No messages found</p>
                        <%}%>
                    <%}%>
                    <br>
                    <a href="/log-out">LOG OUT</a>
                <% } else {%>
                    <p>Not registered? <a href="/sign-up">Sign Up</a></p>
                    <p>Already a user? <a href="/log-in">Log In</a></p>
                    <h1><%= title %></h1>
                    <br>
                    <% if (message_list) {%>
                        <h3>Log in to Club Memba to see messages!</h3>
                        <% message_list.forEach(function(message) { %>
                            <p><span class="blurredText"><%= message.message %>.</span> - posted on <%= message.date_formatted %></p>
                        <% }); %>
                    <% } else {%>
                        <p>No messages found</p>
                    <%}%>
                <%}%>
            </div>
        </div>
    </div>
    <%- include('bootstrap-script') -%>
</body>
</html>